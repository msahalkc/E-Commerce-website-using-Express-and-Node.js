<section>
    <div class="container mt-5">
        <div class="row">
            <a href="/admin/add-product" class="btn btn-success ml-auto">Add Product</a>
        </div>
        <table class="table mt-5" id="productsTable">
            <thead>
                <tr>
                    <th scope="col">Title</th>
                    <th scope="col">Category</th>
                    <th scope="col">Price</th>
                    <th scope="col">Description</th>
                    <th scope="col">Image</th>
                    <th scope="col">Options</th>
                </tr>
            </thead>
            <tbody>
                {{#each products}}
                    <tr>
                        <td>{{this.Name}}</td>
                        <td>{{this.Category}}</td>
                        <td>{{this.Price}}</td>
                        <td>{{this.Description}}</td>
                        <td><img style="width: 50px; height:50px" src="../images/product-images/{{this._id}}.jpg" alt=""></td>
                        <td>
                            <a href="/admin/edit-product?id={{this._id}}" class="btn btn-primary mx-3">Edit</a>
                            <a href="/admin/delete-product?id={{this._id}}" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete {{this.Name}}?')">Delete</a>
                        </td>
                    </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</section>

<script>
    $(document).ready( function () {
    $('#productsTable').DataTable();
} );
</script>